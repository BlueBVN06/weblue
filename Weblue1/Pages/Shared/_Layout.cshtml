<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MY FIRST WEBSITE - BlueBVN1716</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Weblue1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Weblue1</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Minecraft">Minecraft</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <h3 style="width: 50%;">Follow BlueBVN1716</h3>
            <ul>
                <li>
                    <a href="https://www.youtube.com/minecraft" aria-label="Minecraft on YouTube" data-aem-contentname="Youtube icon" target="_blank" class=".mc-socialicon" role="link">
                        <i class="mc-socialicon__youtube" title="Youtube icon" role="img"></i>
                    </a>
                </li>
                <li>
                    <a href="https://www.instagram.com/minecraft/" aria-label="Minecraft on Instagram" data-aem-contentname="Instagram icon" target="_blank" class=".mc-socialicon" role="link">
                        <i class="mc-socialicon__instagram" title="Instagram icon" role="img"></i>
                    </a>
                </li>
                <li>
                    <a href="https://www.facebook.com/minecraft/" aria-label="Minecraft on Facebook" data-aem-contentname="Facebook icon" target="_blank" class=".mc-socialicon" role="link">
                        <i class="mc-socialicon__facebook" title="Facebook icon" role="img"></i>
                    </a>
                </li>
                <li>
                    <a href="https://twitter.com/Minecraft" aria-label="Minecraft on Twitter" data-aem-contentname="Twitter icon" target="_blank" class=".mc-socialicon" role="link">
                        <i class="mc-socialicon__twitter" role="img" title="Twitter icon"></i>
                    </a>
                </li>
                <li>
                    <a href="https://www.reddit.com/r/Minecraft/" aria-label="Minecraft on Reddit" data-aem-contentname="Reddit icon" target="_blank" class=".mc-socialicon" role="link">
                        <i class="mc-socialicon__reddit" title="Reddit icon" role="img"></i>
                    </a>
                </li>
            </ul>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>